{% set twig_url_items = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'headless': true})) %}

<script type="text/javascript">
$(function(){
    var currentPage = '1';
    var cont_products = $('#products-list-container');
    var cont_item = $('#product-view-container');
    
    cont_products.on('click', '.action-pagination', function(e){      
        e.preventDefault();
        currentPage = $(this).attr('data-page');
        displayItems('{{ twig_url_items }}', cont_products, currentPage);
    });

    $('.action-filter-progress-order').click(function(e){
        e.preventDefault();
        var url = $(this).attr('href');
        displayItems(url, cont_products, '1');
    });
    
    $('#action-add-product').click(function(e){
        console.log('sss');
        handleForm($(this), '{{ twig_url_items }}', cont_products, currentPage);       
    });
    
    cont_products.on('click', '.action-edit-product', function(e){       
        handleForm($(this), '{{ twig_url_items }}', cont_products, currentPage);
    });    
   
    cont_products.on('click', '.action-display-product', function(e){
        displayItem($(this), cont_item);
    });    
    
    cont_products.on('click', '.action-delete-product', function(e){   
        deleteItem($(this), '{{ twig_url_items }}', cont_products, currentPage);
    });

    $("#input-search").keyup(function(e) {
        searchItems($(this), '{{ twig_url_items }}', cont_products, currentPage);
    });    
});
</script>