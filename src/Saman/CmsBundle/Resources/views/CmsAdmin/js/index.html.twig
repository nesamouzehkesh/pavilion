            form.find('#saman_cms_page_form_hasManualBreadcrumb').change(function() {
                if ($(this).is(":checked")) {
                    
                }              
            });
        });
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-display-item', function(e){
        displayItem($(this), cont_item);
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-delete-item', function(e){   
        deleteItem($(this), '{{ twig_url_items }}', cont_items, currentPage);
    });
    
    $( "#input-search").keyup(function(e) {
        searchItems($(this), '{{ twig_url_items }}', cont_items, currentPage);
    });
});
</script>