    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-pagination', function(e){      
        e.preventDefault();
        currentPage = $(this).attr('data-page');
        displayItems('{{ twig_url_items }}', cont_items, currentPage);
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-edit-item', function(e){       
