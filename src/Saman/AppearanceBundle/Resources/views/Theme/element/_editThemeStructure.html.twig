<div class="row">
    <div class="col-md-12">{% include 'SamanAppearanceBundle:Theme:element/_editThemeRawStructure.html.twig' %}</div>
</div>

<div class="row">
    <div class="col-md-12 {{ theme.isRawStructure? 'd-hidden' : '' }}" id="cont-theme-structure"></div>
</div>

<div class="d-margin-top-20"></div>

<div class="modal fade" id="cont-theme-row-edit"></div>
<div class="modal fade" id="cont-theme-widget-edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<div class="modal fade" id="cont-theme-widget-add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<div class="modal fade" id="cont-theme-row-add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Add row</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label for="exampleInputEmail1">Columns</label>
                        <select id="theme-structure-row-columns" class="form-control">
                            {% for i in 1..12 %}
                                <option value="{{ i }}">{{ i }}</option>
                            {% endfor %}
                        </select>
                        <script>
                            $(document).ready(function() { $("#theme-structure-row-columns").select2(); });
                        </script>                        
                    </div>
                </div>                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                {{ button(
                    'action.add', 
                    {
                        url: path('saman_appearance_admin_theme_structure_add_row', {'themeId': theme.id}),
                        type: 'primary',
                        size: 'no',  
                        toggleModal: 'cont-theme-row-add',
                        action: 'theme-structure-add-row'
                    }) }}                
            </div>
        </div>
    </div>
</div>