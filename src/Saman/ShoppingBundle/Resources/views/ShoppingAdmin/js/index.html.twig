<script type="text/javascript">
$(function(){
    var url_items = '{{ twig_url_items }}';
    var currentPage = '1';
    var cont_items = $('#{{ twig_cont_items }}');
    var cont_item = $('#{{ twig_cont_item }}');
    
    $('.action-add-item').click(function(e){
        displayItemAddEditForm($(this), '{{ twig_form_item_name }}', '{{ twig_form_item_cont }}', url_items, cont_items, currentPage);       
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-pagination', function(e){      
        e.preventDefault();
        currentPage = $(this).attr('data-page');
        displayItems(url_items, cont_items, currentPage);
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-edit-item', function(e){       
        displayItemAddEditForm($(this), '{{ twig_form_item_name }}', '{{ twig_form_item_cont }}', url_items, cont_items, currentPage);       
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-display-item', function(e){
        displayItem($(this), cont_item);
    });
    
    $('#{{ twig_cont_items }}').on('click', '.action-delete-item', function(e){   
        deleteItem($(this), url_items, cont_items, currentPage);
    });
    
    $( "#input-search").keyup(function(e) {
        searchItems($(this), url_items, cont_items, currentPage);
    });
});
</script>