{% extends "SamanLabelBundle::layout.html.twig" %}

{% block header %}
    <a href="{{ path('saman_label_add') }}">Add New Label</a>
{% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Label</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for label in labels %}
            <tr>
                <td>{{ label.title }}</td>
                <td>
                    <div class="pull-right">
                        <a href="{{ path('saman_label_delete', {'labelId': label.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {{ 'action.delete'|trans }}</a> 
                        <a href="{{ path('saman_label_edit', {'labelId': label.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {{ 'action.edit'|trans }}</a>
                    </div>  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    
{% endblock %}