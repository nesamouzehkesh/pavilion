{% set twig_url_items = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'headless': true})) %}

<script type="text/javascript">
$(function(){
    var currentPage = '1';
    var cont_orders = $('#orders-list-container');
    var cont_item = $('#order-view-container');
    
    cont_orders.on('click', '.action-pagination', function(e){      
        e.preventDefault();
        currentPage = $(this).attr('data-page');
        displayItems('{{ twig_url_items }}', cont_orders, currentPage);
    });

    $('.action-filter-progress-order').click(function(e){
        e.preventDefault();
        var url = $(this).attr('href');
        displayItems(url, cont_orders, '1');
    });   
    
    cont_orders.on('click', '.action-display-order', function(e){
        location.href = $(this).attr('data-url');
    });
    
    cont_orders.on('click', '.action-delete-order', function(e){   
        deleteItem($(this), '{{ twig_url_items }}', cont_orders, currentPage);
    });

    $("#input-search").keyup(function(e) {
        searchItems($(this), '{{ twig_url_items }}', cont_orders, currentPage);
    });
});
</script>