{% if address is defined and address is not null %}
    {% if address.isBillingAddress %}
        {% set addressDefultTitle = 'customer.mainBillingAddress' %}
    {% elseif address.isBillingAddress %}
        {% set addressDefultTitle = 'customer.mainShippingAddress' %}
    {% else %}
        {% set addressDefultTitle = 'customer.mainShippingBillingAddress' %}
    {% endif %}

    <strong>{{ addressDefultTitle|trans }}</strong> 
    {% if editAble is defined and editAble == true %}
        <button class="btn btn-primary btn-xs btn-fade action-edit-profile-item" data-target="{{ editContainer }}" data-url="{{ path('saman_shopping_customer_edit_address', {'addressId': address.id }) }}">{{ 'icon.edit'|icon }}</button> 
    {% endif %}
    <br>

    <blockquote class="mini_quote br-green">
        {{ address.fullName }}<br>
        {{ address.firstAddressLine }} {{ address.secondAddressLine }} [{{ address.locationTypeLabel|trans }}]<br>
        {{ address.city }}, {{ address.state }}, {{ address.country }}<br>
        <abbr title="ZIP code, ZIP, postcode, postal code">Postcode:</abbr> {{ address.postCode }}<br>
        <abbr title="Phone">P:</abbr> {{ address.phoneNumber }}
    </blockquote>
{% endif %}