{% if absolute_urls is defined and absolute_urls == true %}
    {% set root_url = 'http://' ~ app.request.host %}
{% else %}
    {% set root_url = '' %}
{% endif %}

{# Note: CSS files are split due to IE max limit of 4095 selectors PER FILE #}
{% stylesheets
    '@AppBundle/Resources/public/css/vendor/glyphicons.css'
    '@AppBundle/Resources/public/css/vendor/jquery-ui.css'
    '@AppBundle/Resources/public/css/vendor/bootstrap/bootstrap.min.css'
    '@AppBundle/Resources/public/css/vendor/bootstrap-toggle/bootstrap-toggle.min.css'
    '@AppBundle/Resources/public/css/vendor/bootstrap/bootstrap-colorpicker.min.css'
    '@AppBundle/Resources/public/css/vendor/font-awesome.min.css'
    '@AppBundle/Resources/public/css/vendor/latofonts.css'
    '@AppBundle/Resources/public/js/vendor/select2/select2.css'
    '@AppBundle/Resources/public/js/vendor/select2/select2-bootstrap.css'
    '@AppBundle/Resources/public/js/vendor/ladda-bootstrap/ladda-themeless.min.css'
    output = 'css/saman-admin-thirdparty.css' %}
    <link rel="stylesheet" href="{{ root_url ~ asset_url }}" />
{% endstylesheets %}

{% stylesheets
    '@AppBundle/Resources/public/css/saman-admin.css'
    '@AppBundle/Resources/public/css/saman.css'
    '@AppBundle/Resources/public/css/extra-glyphicons.css'
    filter = 'cssrewrite' 
    output = 'css/saman-admin-main.css' %}
    <link rel="stylesheet" href="{{ root_url ~ asset_url }}" />
{% endstylesheets %}

{% javascripts
    '@AppBundle/Resources/public/js/vendor/jquery/jquery-1.11.0.min.js'
    '@AppBundle/Resources/public/js/vendor/jquery/jquery-ui.js'
    '@AppBundle/Resources/public/js/vendor/jquery/jquery.numeric.js'
    '@AppBundle/Resources/public/js/vendor/jquery/jquery.form.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap-toggle/bootstrap-toggle.min.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap-js/transition.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap-js/collapse.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap/bootstrap.min.js'
    '@AppBundle/Resources/public/js/vendor/bootbox/bootbox.min.js'
    '@AppBundle/Resources/public/js/vendor/select2/select2.js'
    '@AppBundle/Resources/public/js/vendor/jquery/jquery.liveFilter.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap/bootstrap-editable.min.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap/bootstrap-datetimepicker.js'
    '@AppBundle/Resources/public/js/vendor/jquery-vegas/jquery.vegas.min.js'
    '@AppBundle/Resources/public/js/vendor/ladda-bootstrap/spin.min.js'
    '@AppBundle/Resources/public/js/vendor/ladda-bootstrap/ladda.min.js'
    '@AppBundle/Resources/public/js/vendor/bootstrap/bootstrap-colorpicker.min.js'
    '@AppBundle/Resources/public/js/script.main.js'
    '@AppBundle/Resources/public/js/vendor/ckeditor/ckeditor.js'
    output = 'js/saman-admin-main.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
