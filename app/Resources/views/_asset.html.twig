{% javascripts 
    '@AppBundle/Resources/public/js/vendor/blueimp/jquery.iframe-transport.js'
    '@AppBundle/Resources/public/js/vendor/blueimp/jquery.fileupload.js'
    '@AppBundle/Resources/public/js/vendor/blueimp/jquery.fileupload-process.js'
    '@AppBundle/Resources/public/js/vendor/blueimp/jquery.fileupload-ui.js'
    output = 'js/saman-admin-blueimp-main.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}