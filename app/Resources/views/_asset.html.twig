{% if absolute_urls is defined and absolute_urls == true %}
    {% set root_url = 'http://' ~ app.request.host %}
{% else %}
    {% set root_url = '' %}
{% endif %}

{# Note: CSS files are split due to IE max limit of 4095 selectors PER FILE #}
{% stylesheets
    '@AppBundle/Resources/public/css/glyphicons.css'
    '@AppBundle/Resources/public/css/jquery-ui.css'
    '@AppBundle/Resources/public/css/bootstrap.min.css'
    '@AppBundle/Resources/public/css/bootstrap-toggle.min.css'
    '@AppBundle/Resources/public/js/vendor/select2/select2.css'
    '@AppBundle/Resources/public/js/vendor/select2/select2-bootstrap.css'
    '@AppBundle/Resources/public/css/bootstrap-colorpicker.min.css'
    '@AppBundle/Resources/public/css/font-awesome.min.css'
    '@AppBundle/Resources/public/css/latofonts.css'
    '@AppBundle/Resources/public/js/vendor/ladda/ladda-themeless.min.css'
    output = 'css/saman-thirdparty.css' %}
    <link rel="stylesheet" href="{{ root_url ~ asset_url }}" />
{% endstylesheets %}

{% stylesheets
    '@AppBundle/Resources/public/css/saman-admin.css'
    '@AppBundle/Resources/public/css/saman.css'
    '@AppBundle/Resources/public/css/extra-glyphicons.css'
    filter = 'cssrewrite' 
    output = 'css/saman-main.css' %}
    <link rel="stylesheet" href="{{ root_url ~ asset_url }}" />
{% endstylesheets %}
