{% block field_rows %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endblock field_rows %}

{% block form_row %}
    {# Variable inheritance #}
    {% set isInline = attr.inline|default(false) %}
    {% set class = attr.class|default('form-control') %}
    {% set placeholder = attr.placeholder|default(form.vars.label) %}
        {% set hasError = form_errors(form)|length > 1 %}
        <div class="form-group {{ hasError? 'alert alert-danger has-error has-feedback' : ''}}">
            {% if attr.icon is defined and attr.icon is not null %}
                {{ attr.icon|icon }}
            {% endif %}
            {% if isInline == false %}
                {{ form_label(form) }}
            {% endif %}    
            {% if attr.description is defined and attr.description is not null %}
                <div class="d-margin-bottom-5">
                    {{ attr.description|trans }}
                </div>
            {% endif %}
            <div class="row">
                <div class="{{ attr.grid|default('col-md-12') }}">
                    {% if isInline == true %}
                        {{ form_label(form) }}
                    {% endif %}    
                    {{ form_widget(form, {'attr':{'class':class, 'placeholder':placeholder}}) }}
                </div>
            </div>
            {% if attr.possibleValues is defined and attr.possibleValues is not null %}
                <div class="d-margin-bottom-5 d-text-muted">
                    {{ attr.possibleValues|raw }}
                </div>
            {% endif %}            
            {% if hasError %}
                <div class="row">
                    <div class="col-md-12 d-margin-top-5">
                        {{ form_errors(form) }}
                    </div>	
                </div>
            {% endif %}    
        </div>
{% endblock form_row %}


{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% if compound %}
            {% set errorMessage = '' %}
            {% for error in errors %}
                {% set errorMessage = error.message|trans ~ '.' ~ errorMessage %}
            {% endfor %}
            <div class="row">
                <div class="col-md-12">
                    {{ errorMessage|errorAlert }}
                </div>	
            </div>            
        {% else %}
            {% for error in errors %}
            <div class="row">
                <div class="col-md-12">
                    {{ 'icon.alert.warning'|icon  }} {{ error.message }}
                </div>	
            </div>
            {% endfor %}
        {% endif %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}