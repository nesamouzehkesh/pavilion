{% if absolute_urls is defined and absolute_urls == true %}
    {% set root_url = 'http://' ~ app.request.host %}
{% else %}
    {% set root_url = '' %}
{% endif %}

<style type="text/css">
    @font-face {
        font-family: 'sofiaProLight';
        src: url('{{ base_urls }}/theme/fonts/sofiaProLight/SofiaProLight-webfont.eot');
        src: url('{{ base_urls }}/theme/fonts/sofiaProLight/SofiaProLight-webfont.eot?#iefix') format('embedded-opentype'),
             url('{{ base_urls }}/theme/fonts/sofiaProLight/SofiaProLight-webfont.woff2') format('woff2'),
             url('{{ base_urls }}/theme/fonts/sofiaProLight/SofiaProLight-webfont.woff') format('woff'),
             url('{{ base_urls }}/theme/fonts/sofiaProLight/SofiaProLight-webfont.ttf') format('truetype'),
             url('{{ base_urls }}/theme/fonts/sofiaProLight/SofiaProLight-webfont.svg#sofia_prolight') format('svg');
        font-weight: normal;
        font-style: normal;
    }        
</style>

<!-- Bootstrap Core CSS -->
<link href="{{ asset('theme/css/bootstrap.min.css', absolute=true) }}" rel="stylesheet">
<!-- Custom CSS -->
{% if saman_displayFullView %}
    <link href="{{ asset('theme/css/grayscale.css', absolute=true) }}" rel="stylesheet">
{% endif %}
<!-- Custom Fonts -->
<link href="{{ asset('theme/font-awesome/css/font-awesome.min.css', absolute=true) }}" rel="stylesheet" type="text/css">
<link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
<link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">

