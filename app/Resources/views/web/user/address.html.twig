{% if address is defined and address is not null %}
<address>
    {% if address.isBillingAddress %}
        <strong>Your primary billing address</strong><br>
    {% else %}
        <strong>Your primary shipping address</strong><br>
    {% endif %}
    {{ address.fullName }}<br>
    {{ address.firstAddressLine }} {{ address.secondAddressLine }}<br>
    {{ address.city }}, {{ address.state }}, {{ address.country }}<br>
    <abbr title="ZIP code, ZIP, postcode, postal code">Postcode:</abbr> {{ address.postCode }}<br>
    <abbr title="Phone">P:</abbr> {{ address.phoneNumber }}
</address>
{% endif %}