{% if data is not null %}
    <div class="well">
        <center>
            {% if data.attachments is not null %}
                <div id="owl-order-images" class="owl-carousel owl-theme">
                    {% for image in data.attachments|getMedias %}
                        <div class="item"><img src="{{ asset(image.path|imagine_filter('mi')) }}" /></div>
                    {% endfor %}
                </div>        
                
                <script type="text/javascript">
                    $(document).ready(function() {
                      $("#owl-order-images").owlCarousel({
                          navigation : true,
                          slideSpeed : 300,
                          paginationSpeed : 400,
                          singleItem: true
                      });
                    });
                </script>
            {% else %}

            {% endif %}

            <h4>
            It will take our skilled carpet-makers {{ data.duration }} weeks to handmade<br>
            <h2>{{ data.knots }}</h2>
            silk knots in {{ data.numberOfColors }} bright colours!<br><br>

            Price:
            <h2>{{ data.price|localizedcurrency('USD') }}</h2>
            </h4>
        </center>
    </div>
{% else %}
{% endif %}                