<!DOCTYPE html>
<html lang="en">
<head>
    {% include "::web/_meta.html.twig" %}
    <title>{{ base_title|default('') }} - {% block title %}{{ title }}{% endblock %}</title>
    {% include "::web/_asset.html.twig" %}
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    {% include "::web/_navbar.html.twig" with {isNotIndex: false} %}
    {% if saman_displayFullView %}
        {% include "::web/_fullIndex.html.twig" %}
    {% else %}
        <div class="container">
            <div class="row margin-top-20">
                <div class="col-sm-9">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% if content is defined %}
                                <div class="page-header">
                                    <h3>{{ title }}</h3>
                                </div>
                                <p>{{ content|raw }}</p>
                            {% else %}
                                {{ 'Whoops! Page not found'|warningAlert }}
                            {% endif %}
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    {% endif %}    
    {% include "::web/_js.html.twig" %}
    {% block script %}{% endblock %}
    </body>
</html>